<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="MYSQLDETTE" transaction-type="RESOURCE_LOCAL">
        <!-- Le nom de l'unité de persistance -->
          <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.dette.entities.Article</class>
        <class>com.dette.entities.User</class>
        <class>com.dette.entities.Client</class>
        <exclude-unlisted-classes>True</exclude-unlisted-classes>
        <!-- Les classes que vous souhaitez gérer avec JPA -->
        
        <properties>
            <!-- Propriétés de configuration de la base de données -->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/gesdette"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="Mohamed2709"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            
            <!-- Paramètres supplémentaires -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <!-- `update` pour mettre à jour le schéma de la base de données, ou `create` pour créer à nouveau -->
        </properties>
    </persistence-unit>

</persistence>
